{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "Request",
      "methods": [ "get", "post" ],
      "route": "logs/query"
    },
    {
      "name": "outputDocument",
      "type": "cosmosDB",
      "direction": "out",
      "databaseName": "%COSMOS_DATABASE_NAME%",
      "containerName": "%COSMOS_CONTAINER_NAME%",
      "createIfNotExists": true,
      "connection": "CosmosDBConnection"
    },
    {
      "name": "Response",
      "type": "http",
      "direction": "out"
    }
  ],
  "scriptFile": "run.ps1"
}
